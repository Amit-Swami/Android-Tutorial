<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4386795674493212/7918299767" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adView26">


        <HorizontalScrollView
            android:id="@+id/horizontalsvxml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adView26">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <br.tiagohm.codeview.CodeView
                    android:id="@+id/code_view_xml"
                    android:layout_width="700.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.0dip"
                    app:cv_font_size="12"
                    app:cv_show_line_number="true"
                    app:cv_start_line_number="1"
                    app:cv_wrap_line="true"
                    app:cv_zoom_enable="true" />

            </LinearLayout>

        </HorizontalScrollView>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>